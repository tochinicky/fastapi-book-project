{
    "name": "fastapi-nginx-group",
    "properties": {
      "containers": [
        {
          "name": "nginx-container",
          "properties": {
            "image": "ACR_NAME_PLACEHOLDER.azurecr.io/nginx-proxy:latest",
            "resources": {
              "requests": {
                "cpu": 1,
                "memoryInGB": 1
              }
            },
            "ports": [{ "protocol": "TCP", "port": 80 }]
          }
        },
        {
          "name": "fastapi-container",
          "properties": {
            "image": "ACR_NAME_PLACEHOLDER.azurecr.io/fastapi-app:latest",
            "command": ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"],
            "resources": {
              "requests": {
                "cpu": 1,
                "memoryInGB": 1.5
              }
            },
            "ports": [{ "protocol": "TCP", "port": 8000 }]
          }
        }
      ],
      "osType": "Linux",
      "ipAddress": {
        "type": "Public",
        "dnsNameLabel": "fastapi-nginx",
        "ports": [
          { "protocol": "TCP", "port": 80 },
          { "protocol": "TCP", "port": 8000 }
        ]
      },
      "imageRegistryCredentials": [
        {
         "server": "ACR_NAME_PLACEHOLDER.azurecr.io",
         "username": "ACR_USERNAME_PLACEHOLDER",
         "password": "ACR_PASSWORD_PLACEHOLDER"
        }
      ],
      "restartPolicy": "Always"
    }
  }